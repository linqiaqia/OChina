<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    
    >

    <TextView
        android:id="@+id/news_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6.0dip"
        android:layout_marginRight="6.0dip"
        android:layout_marginTop="10.0dip"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:background="#ffffff"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6.0dip"
        android:layout_marginRight="6.0dip"
        android:layout_marginTop="6.0dip"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/news_detail_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:text="@string/news_detail_lable_pub"
            android:textColor="@color/gray"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/news_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:textColor="@color/gray"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:src="@drawable/widget_comment_count_icon" />

        <TextView
            android:id="@+id/news_detail_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:textColor="@color/gray"
            android:textSize="12dp" 
            android:visibility="gone"/> 
        <TextView
            android:id="@+id/news_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:textColor="@color/gray"
            android:textSize="12dp" />
    </LinearLayout>
    
    <View style="@style/DetailCutLine" />
</merge>