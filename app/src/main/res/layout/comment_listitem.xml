<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"    
    android:descendantFocusability="blocksDescendants" 
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip"
    android:paddingBottom="7dip">   

    <ImageView 
    	android:id="@+id/comment_listitem_userface"
      	style="@style/UserFaceImageStyle"/>

	<LinearLayout
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_marginLeft="6dip"> 
	       	
       	<TextView 
       		android:id="@+id/comment_listitem_username"  
    		android:layout_width="wrap_content" 
           	android:layout_height="wrap_content"
       	    android:includeFontPadding="false"
           	android:textSize="14dp"
            android:textColor="@android:color/holo_blue_dark"/>	         	
        
	    <LinearLayout
			android:id="@+id/comment_listitem_refers"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:layout_marginTop="8dip"
    		android:orientation="vertical"
    		android:background="@drawable/review_bg_top">
			<TextView
			android:id="@+id/comment_listitem_content"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dip"
			android:textSize="15dp"
			android:textColor="@color/text_black"
			android:textColorLink="@android:color/holo_blue_dark"
			android:autoLink="web|email"/>
    	</LinearLayout>
	    
		
		
		
    	
		<LinearLayout 
	    	android:orientation="horizontal" 
	        android:layout_width="fill_parent"  
	        android:layout_height="wrap_content"
	        android:layout_marginTop="8dip"> 
			<TextView 
	        	android:id="@+id/comment_listitem_client" 
	            android:layout_width="wrap_content" 
	         	android:layout_height="wrap_content"
	         	android:layout_marginRight="10.0dip"
	         	android:textSize="10dp"
	         	android:textColor="@color/text_Grey"/>
			
	       	<TextView 
	        	android:id="@+id/comment_listitem_date" 
	            android:layout_width="wrap_content" 
	         	android:layout_height="wrap_content"
	         	android:textSize="10dp"
	         	android:textColor="@color/text_Grey"/> 
        </LinearLayout>
			        
	</LinearLayout>

</LinearLayout> 
